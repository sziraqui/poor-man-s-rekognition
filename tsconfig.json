{ 
    "compilerOptions": { 
        "emitDecoratorMetadata": true, 
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs", 
        "target": "es6",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noLib": false,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        ".vscode",
        "docs",
        "manual-tests",
        "bin/copy-static-assets.ts"
    ],
    "include": [
        "bin/*.ts",
        "src/**/*.ts",
        "web-demo/*/*"
    ]
}
